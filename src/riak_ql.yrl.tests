%%% Failure tests
%%%

failure_sql_test() ->
    String = "klsdafj kljfd (*((*& 89& 8KHH kJHkj hKJH K K",
    Expected = error,
    Got = case parse(riak_ql_lexer:get_tokens(String)) of
              {error, _Err} -> error;
              Other         -> {should_not_compile, Other}
          end,
    ?assertEqual(Expected, Got).

% RTS-388
concatenated_unquoted_strings_test() ->
    String = "select * from response_times where cats = be a st",
    Expected = error,
    Got = case parse(riak_ql_lexer:get_tokens(String)) of
              {error, _Err} ->
                  error;
              {ok, Other} -> {should_not_compile, Other}
          end,
    ?assertEqual(Expected, Got).


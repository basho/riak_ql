%%
%% canonicalise WHERE clauses tests
%%

canonicalise_where_1_test() ->
    ?where_test({or_,
                 {'<', "alpha", {integer, 2}},
                 {'>', "beta",  {integer, 3}}
                },
                {or_,
                 {'<', "alpha", {integer, 2}},
                 {'>', "beta",  {integer, 3}}
                }).

canonicalise_where_2_test() ->
    ?where_test({or_,
                 {'>', "beta",  {integer, 3}},
